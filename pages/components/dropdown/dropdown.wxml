<view class='ui-dropdown {{dropClass}}'>
  <dl wx:for="{{dropList}}" wx:key="{{index}}">
    <dt class='ui-dropdown__droplink' bindtap="tapDropdown" data-index="{{index}}">
      <text class='text'>{{item.selectName}}<text class='arrow'></text></text>
    </dt>
    <dd class='ui-dropdown__menu' animation="{{animationData[index]}}">
      <ul class='ui-dropdown__list'>
        <li class='ui-dropdown__item' wx:for='{{item.list}}' wx:for-item='item2' wx:for-index='index2' wx:key='{{index2}}' data-value='{{item2.id}}'>{{item2.name}}</li>
      </ul>
    </dd>
  </dl>
</view>
