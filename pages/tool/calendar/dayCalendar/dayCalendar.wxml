<view class='calendar-day'>
  <view class='calendar-topbar'>
    <view class='calendar-topbar__side'>
      <Dropdown dropClass='is-right' dropWidth='200rpx' initDropList='{{dropList}}'></Dropdown>
    </view>
    <view class='calendar-topbar__day'>
      <view class='day-ctrlbtn day-prev' bindtap='changeToPrev'></view>
      <view class='day-list'>
        <view class='day-item' wx:for='{{dayList}}' wx:key='{{index}}' data-id='{{index}}' bindtap='changeTo'>
          <text class='day-num'>{{item.day}}</text>
          <text class='day-week'>{{item.week}}</text>
        </view>
      </view>
      <view class='day-ctrlbtn day-next' bindtap='changeToNext'></view>
    </view>
  </view>
  <view class='calendar-body'>
    <view class='calendar-total'>
        <view class='calendar-total__item item-finish'>
            <text class='calendar-total__label'>完成：</text>
            <text class='calendar-total__num'>{{countFinish}}</text>
        </view>
        <view class='calendar-total__item item-wait'>
            <text class='calendar-total__label'>未完成：</text>
            <text class='calendar-total__num'>{{countUnFinish}}</text>
        </view>
        <view class='calendar-total__item item-pass'>
            <text class='calendar-total__label'>过期：</text>
            <text class='calendar-total__num'>{{countOverdue}}</text>
        </view>
    </view>
    <view class='calendar-checkwrap'>
      <view class='calendar-checkwrap__box' wx:for="{{taskList}}" wx:key="{{index}}">
        <text class='calendar-checkwrap__time'>{{item.time}}</text>
        <view class='calendar-checkwrap__content'>
          <view class='calendar-checkwrap__row' wx:for="{{item.list}}" wx:for-item="item2" wx:key="{{index}}" >
            <checkbox-group bindchange="changeListCheck" data-id="{{item2.id}}">
              <label class="ui-checkbox">
                <checkbox checked="{{item2.status==1?true:false}}" value="{{item2.id}}" />{{item2.name}}
              </label>
            </checkbox-group>
          </view>
        </view>
      </view>
    </view> 
  </view>
</view>